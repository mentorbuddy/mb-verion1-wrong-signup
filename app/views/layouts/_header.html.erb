	<div class="wrapper_wide">
		<%= link_to "MentorBuddy", root_path, id: "logo" %>
		<nav>
			<ul>
				<% unless university_signed_in? %>
					<li><%= link_to "Explore", universities_path %></li>
					<li><%= link_to "Sign In", new_university_session_path %></li>
					<li><%= link_to "Add your University", new_university_registration_path %></li>
				<% else %>
					<li><%= link_to "Dashboard", root_path %></li>
					<li><%= link_to "Explore", universities_path %></li>
					<li><%= link_to "Sign Out", destroy_university_session_path, method: :delete %></li>
				<% end %>
			</ul>
		</nav>
	</div>
</header>
