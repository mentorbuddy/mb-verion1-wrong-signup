<div id="university_show">
	<div id="show_banner">
		<div class="wrapper_skinny">
			<h1><%= @university.title %></h1>
			<p class="description"><%= @university.description %></p>
			<% unless @university.itunes.blank? %>
				<a href="<%= @university.itunes %>" class="subscribe_link">iTunes</a>
			<% end %>
			<% unless @university.stitcher.blank? %>
				<a href="<%= @university.stitcher %>" class="subscribe_link">Stitcher</a>
			<% end %>
			<% unless @university.podbay.blank? %>
				<a href="<%= @university.podbay %>" class="subscribe_link">PodBay</a>
			<% end %>
		</div>
	</div>

	<div id="breadcrumb">
		<%= link_to universities_path do %>
			All universities
			<span>/</span>
			<%= link_to @university.title, university_path(@university) %>
			<span>/</span>
			<%= @mentor.title %>
		<% end %>
	</div>

	<div id="mentor_content">
		<div class="wrapper_skinny">
			<%= image_tag @mentor.mentor_thumbnail.url(:medium), class: "current_mentor_thumbnail" %>
			<h2><%= @mentor.title %></h2>
			<p class="description"><%= @mentor.description %></p>

			<div id="jquery_jplayer_1" class="jp-jplayer"></div>
      <div id="jp_container_1" class="jp-audio">
        <div class="jp-type-single">
          <div class="jp-gui jp-interface">
            <ul class="jp-controls">
              <li><a href="javascript:;" class="jp-play" tabindex="1">&#61515;</a></li>
              <li><a href="javascript:;" class="jp-pause" tabindex="1">&#61516;</a></li>
              <li><a href="javascript:;" class="jp-mute" tabindex="1" title="mute">&#61480;</a></li>
              <li><a href="javascript:;" class="jp-unmute" tabindex="1" title="unmute">&#61478;</a></li>
            </ul>

            <div class="jp-progress">
              <div class="jp-seek-bar">
                <div class="jp-play-bar"></div>
              </div>
            </div>

            <div class="jp-time-holder">
              <div class="jp-current-time"></div>
            </div>

            <div class="jp-volume-bar">
              <div class="jp-volume-bar-value"></div>
            </div>

            <div class="jp-no-solution">
              <span>Update Required</span>
              To play the media you will need to either update your browser to a recent version or update your <a href="http://get.adobe.com/flashplayer/" target="_blank">Flash plugin</a>.
            </div>
          </div>
        </div>
      </div>

		</div>
	</div>

	<div id="mentors">
		<div class="wrapper_skinny">
			<ul class="cf">
				<% @mentors.each do |mentor| %>
					<li class="cf">
						<div class="mentor_thumbnail">
							<a href="mentor.html">
								<%= image_tag mentor.mentor_thumbnail.url(:medium) %>
							</a>
						</div>
						<div class="mentor_overview">
							<h2><%= link_to mentor.title, university_mentor_path(@university, mentor) %></h2>
							<p class="description"><%= truncate(mentor.description, length: 160) %></p>
						</div>
					</li>
				<% end %>
			</ul>
		</div>
	</div>
</div>

<script>
	$(document).ready(function(){
	  $("#jquery_jplayer_1").jPlayer({
	    ready: function () {
	      $(this).jPlayer("setMedia", {
	        mp3: "<%= @mentor.mp3.url %>",
	      });
	    },
	    swfPath: "/js",
	    supplied: "mp3"
	  });
	});
</script>
